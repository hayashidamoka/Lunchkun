<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lunch_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="読み込み中..."
        android:textColor="@color/textColor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/shop_photo_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="@+id/shop_web_botton"
        android:layout_below="@id/shop_name"
        android:layout_above="@+id/shop_catch_copy"
        />

    <ImageView
        android:id="@+id/shop_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="@+id/shop_photo_bottom"
        />

    <TextView
        android:id="@+id/shop_catch_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="読み込み中..."
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/shop_web_botton"
        android:layout_marginBottom="20dp"

        />

    <Button
        android:id="@+id/shop_web_botton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@drawable/frame_style"
        android:text="お店の詳細"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/next_shop_botton"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/next_shop_botton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@drawable/frame_style"
        android:text="他のところがいい！"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/CregitTextView"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/CregitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textColor="@color/textColor"
        android:contentDescription="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="クレジット"/>
</RelativeLayout>