<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lunch_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ごめんね...。"
        android:textColor="@color/textColor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:id="@+id/lunch_angry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shop_name"
        android:layout_above="@+id/please_text"
        android:src="@drawable/lunch_sad"
        />

    <TextView
        android:id="@+id/please_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="電波のいいところで使ってね..."
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/again_botton"
        android:layout_marginBottom="20dp"
        />


    <Button
        android:id="@+id/again_botton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@drawable/frame_style"
        android:text="もういっかい！"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>